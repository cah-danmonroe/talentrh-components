<button type="button" class="talent-button-right" {{action 'openMultiSelectModal'}}>
  <i class="fa fa-th-list"></i>
</button>
<div class="form-group">
  <div class="talent-input-multiselect form-control dirty">
    {{#each selectedRecords as |record|}}
      <div class="talent-input-multiselect-selected">
        <i class="fa fa-times input-multiselect-close-selected" {{action 'deselectRecord' record}}></i>
        {{record.text}}
      </div>
    {{/each}}

    {{input type="text" value=searchTerm key-up="searchByTerm" autocomplete="off"}}
    <div class="fix-selecteds"></div>

    <div class="talent-input-multiselect-options-container" style="display: none;">
      <ul>
        {{#each recordsToChoose as |record|}}
          <li {{action 'selectRecord' record}}>{{record.text}}</li>
        {{/each}}
      </ul>
    </div>
  </div>
  <label>Selecione Admin</label>
</div>

<div class="modal fade multiSelectModal">
  <div class="modal-dialog modal-w-800" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
        <h3 class="modal-title text-center">Selecionar Itens</h3>
      </div>
      <div class="modal-body form">
        <div class="row">
          <div class="col-md-12 talent-multiselect-container">
            <div class="col-md-5">
              <div class="talent-multiselect-box talent-multiselect-toselect">
                {{input
                  class="form-control input-search-multiselect"
                  type="text"
                  value=searchTerm
                  key-up="searchByTerm"
                  placeholder="Pesquisar"}}
                <ul>
                  {{#each recordsToChoose as |record|}}
                    <li {{action 'selectRecord' record}}>{{record.text}}</li>
                  {{/each}}
                </ul>
              </div>
            </div>
            <div class="col-md-2"></div>
            <div class="col-md-5">
              <div class="talent-multiselect-box talent-multiselect-selected">
                <ul>
                  {{#each chosenRecords as |record|}}
                    <li {{action 'deselectRecord' record}}>{{record.text}}</li>
                  {{/each}}
                </ul>
              </div>
            </div>
          </div>
        </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">{{t 'cancel'}}</button>
        <button type="button" class="btn btn-primary" {{action 'confirmSelectedRecords'}}>Confirmar</button>
      </div>
    </div>
  </div>
</div>
